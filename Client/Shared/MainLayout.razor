@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Chat" Color="Color.Inherit" Edge="Edge.Start" OnClick="@OpenDrawer" />
        <MudSpacer />
        <MudIconButton Href="anime" Icon="@Icons.Material.Filled.List"  />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" DisableOverlay="true" Width="500px" Height="100%" Anchor="Anchor.Start" Elevation="1" Variant="@DrawerVariant.Responsive">
        <LiveChat />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {

    private MudTheme _theme = new();
    private bool _isDarkMode = true;
    bool _drawerOpen =false;
  

    void OpenDrawer()
    {
        _drawerOpen = !_drawerOpen;
      
    }
}