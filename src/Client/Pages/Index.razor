@page "/"
@layout ObakiSiteMainLayout
@using ObakiSite.Client.Pages.Posts
<PageTitle>Home</PageTitle>

<div class="d-flex justify-center flex-row flex-grow-1 gap-1">
    <div class="align-self-start flex-1">
        <MudHidden Breakpoint="Breakpoint.LgAndUp" Invert="true">
            <MudList Clickable="true" Color="Color.Primary">
                <MudListItem Text="Home" Icon="@Icons.Material.Filled.Home" Href="/" Dense="true"/>
                <MudListItem Text="Anime List" Icon="@Icons.Material.Filled.LibraryBooks" Href="/anime" Dense="true"/>
                <MudListItem Text="Chat Demo" Icon="@Icons.Material.Filled.Chat" Href="/livechat" Dense="true" />
                <MudListItem Text="Ask Chat Gpt" Icon="@Icons.Material.Filled.Adb" Href="/chatgpt/chat" Dense="true" />
                <MudListItem Text="Tl;dr" Icon="@Icons.Material.Filled.Summarize" Href="/chatgpt/tldr" Dense="true" />
                <MudListItem Text="TranslationStation" Icon="@Icons.Material.Filled.Translate" Href="/chatgpt/translate" Dense="true" />
                <MudListItem Text="Data Parser" Icon="@Icons.Material.Filled.Transform" Href="/chatgpt/parser" Dense="true" />
                <MudListItem Text="GitHub repo" Icon="@Icons.Custom.Brands.GitHub" Href="https://github.com/obaki102/ObakiSite" Dense="true" />
            </MudList>
        </MudHidden>
    </div>
    <ViewPostSummaries />
</div>
